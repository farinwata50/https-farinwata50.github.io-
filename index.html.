    <script>
        function openService(pageId) {
            document.getElementById('dashboardPage').classList.add('hidden');
            document.getElementById('genericPage').classList.remove('hidden');
            document.getElementById('genericTitle').innerText = pageId.replace('Page', '').toUpperCase();
        }


        function goHome() {
            document.getElementById('genericPage').classList.add('hidden');
            document.getElementById('dashboardPage').classList.remove('hidden');
        }


        function showPinModal() { 
            document.getElementById('pinModal').classList.remove('hidden');
            const pinInput = document.getElementById('mainPinInput');
            pinInput.value = '';
            pinInput.focus();
        }
        
        function closePin() { 
            document.getElementById('pinModal').classList.add('hidden'); 
        }


        function validatePinInput(input) {
            input.value = input.value.replace(/[^0-9]/g, '');
        }


        function finalPay() { 
            const pinValue = document.getElementById('mainPinInput').value;
            
            if(pinValue.length === 4) {
                alert("An biya cikin nasara!"); 
                location.reload();
            } else {
                alert("Da fatan za a saka PIN guda 4");
            }
        }
    </script>
